rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if the user is an admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "admin";
    }

    match /users/{userId} {
      // User can read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Admin can read all users (needed for Dashboard "Total Users")
      allow read, write: if isAdmin();
    }

    match /books/{bookId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // CHANGED: Allow public access for visit tracking (was isAdmin)
    match /stats/{statId} {
      allow read, write: if true;
    }
    
    match /daily_stats/{document=**} {
  		allow read, write: if true;
		}

    // NEW: Allow access to questions, courses, and universities (Nested Structure)
    match /courses/{document=**} {
      allow read, write: if true;
    }
    
    match /universities/{document=**} {
      allow read, write: if true;
    }
    
    // Explicitly allow collectionGroup queries for questions
    match /{path=**}/questions/{question} {
      allow read, write: if true;
    }
  }
}
